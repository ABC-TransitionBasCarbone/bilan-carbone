model Question {
  id              String       @id @default(uuid())
  idIntern        String       @default(uuid())
  label           String
  order           Int          @default(autoincrement())
  subPost         SubPost
  type            QuestionType
  possibleAnswers String[]
  userAnswers     Answer[]

  @@map("questions")
}

enum QuestionType {
  QCM
  QCU
  SELECT
  TABLE
  POSTALCODE
  date
  number
  range
  tel
  text
}

model Answer {
  id         String   @id @default(uuid())
  response   Json
  study      Study    @relation(fields: [studyId], references: [id])
  studyId    String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  @@map("answers")
}
